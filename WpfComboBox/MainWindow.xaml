<Window x:Class="WpfComboBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfComboBox"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="500"
        FontSize="16">
    <StackPanel Orientation="Horizontal" Height="30">
        <ComboBox x:Name="wordsComboBox" Width="250" IsEditable="True" MaxDropDownHeight="300"/>
        <TextBox x:Name="wordTextBox" Width="200" MaxLength="20"/>
        <Button Width="50" Content="Add" Click="Button_Click"/>
    </StackPanel>
</Window>
